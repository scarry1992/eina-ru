<section class="import-book clearfix">
    <div class="label-container">
        <span>Импорт книги</span>
        <i class="glyphicon glyphicon-link"></i>
    </div>
    <form class="form-horizontal clearfix">
        <div class="form-group  col-md-8 col-xs-8 col-lg-8">
            <label class="sr-only" for="categories-search">Search</label>
            <input type="text" id='categories-search' placeholder="Полная ссылка на книгу" class="form-control">
        </div>
        <div class="form-group  col-md-3 col-xs-3 col-lg-3">
            <label class="sr-only" for="category">Category</label>
            <select id='categories-select' placeholder="Найти" class="form-control">
                <option value="Source">Источник</option>
                <option value="Link">Ссылка</option>
            </select>
        </div>
        <button type="submit" class="btn">Добавить</button>
    </form>
</section>